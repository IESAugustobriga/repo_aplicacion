<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fondo-->
    <View
        android:id="@+id/fondo_oscuro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_oscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--cabecera-->
    <View
        android:id="@+id/cabecera_osc"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/cabecera_osc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--pie de pagina-->
    <View
        android:id="@+id/pie_pagina_osc"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/pie_pagina_osc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!--Nuestro centro-->
    <LinearLayout
        android:id="@+id/cont1osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_nuestro_centro_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_portico_osc"/>

            <TextView
                android:id="@+id/txtNuestroCentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Nuestro centro"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Novedades-->
    <LinearLayout
        android:id="@+id/cont2osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_novedades_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_novedades_osc"/>

            <TextView
                android:id="@+id/txtNovedades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Noticias"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Profesorado-->
    <LinearLayout
        android:id="@+id/cont4osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont2osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_profesorado_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_profesorado_osc" />

            <TextView
                android:id="@+id/txtProfesorado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Profesorado"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Plano del centro-->
    <LinearLayout
        android:id="@+id/cont3osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont1osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_plano_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_mapa_osc"/>

            <TextView
                android:id="@+id/txtPlano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Plano del centro"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Horario-->
    <LinearLayout
        android:id="@+id/cont5osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont3osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_horarios_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_horarios_osc"/>

            <TextView
                android:id="@+id/txtHorarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Horarios"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Calendario-->
    <LinearLayout
        android:id="@+id/cont6osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont4osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_calendario_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_calendario_osc" />

            <TextView
                android:id="@+id/txtCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Calendario"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Youtube-->
    <LinearLayout
        android:id="@+id/cont7osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont5osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_youtube_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_red_osc" />

            <TextView
                android:id="@+id/txtYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Youtube"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!--Radio-->
    <LinearLayout
        android:id="@+id/cont8osc"
        android:layout_width="170dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/cont_iconos_osc"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont6osc"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="115dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ico_radio_osc"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_red_osc"/>

            <TextView
                android:id="@+id/txtRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="Radio El Candil"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_titulo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:src="@drawable/cabecera_temporal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>